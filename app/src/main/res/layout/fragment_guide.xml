<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TamplateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@color/colorMain">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="2dp"
                    android:text="@string/textViewSearchGuideResult"
                    android:textColor="#FFF"
                    android:textSize="35dp" />

                <SearchView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="20dp"
                    tools:layout_editor_absoluteX="182dp"
                    tools:layout_editor_absoluteY="0dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="388dp"
            android:stretchColumns="0,1,2">
            <!-- 1行目 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewUser1"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:src="@drawable/profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewUser2"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewUser3"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_column="2"
                    android:layout_margin="10dp"
                    android:src="@drawable/profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </TableRow>


            <!-- 2行目 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textViewUserName1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_column="0"
                    android:text="@string/textViewUserNameProfile"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.032"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewUser" />

                <TextView
                    android:id="@+id/textViewUserName2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:text="@string/textViewUserNameProfile"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.032"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewUser" />

                <TextView
                    android:id="@+id/textViewUserName3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_column="2"
                    android:text="@string/textViewUserNameProfile"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.032"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewUser" />
            </TableRow>

            <!-- 3行目 -->
            <TableRow>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border1"
                    android:text="依頼する" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="依頼する"
                    android:background="@drawable/border1"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="依頼する"
                    android:background="@drawable/border1"/>

            </TableRow>
            <!-- 4行目 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewUser4"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:src="@drawable/profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewUser5"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewUser6"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_column="2"
                    android:layout_margin="10dp"
                    android:src="@drawable/profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </TableRow>
            <!-- 5行目 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textViewUserName4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_column="0"
                    android:text="@string/textViewUserNameProfile"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.032"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewUser" />

                <TextView
                    android:id="@+id/textViewUserName5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:text="@string/textViewUserNameProfile"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.032"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewUser" />

                <TextView
                    android:id="@+id/textViewUserName6"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:text="@string/textViewUserNameProfile"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.032"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewUser" />
            </TableRow>
            <!-- 6行目 -->
            <TableRow>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="依頼する"
                    android:background="@drawable/border1"/>

                <Button
                    android:id="@+id/button5"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="依頼する"
                    android:background="@drawable/border1"/>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="依頼する"
                    android:background="@drawable/border1"/>

            </TableRow>
        </TableLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>